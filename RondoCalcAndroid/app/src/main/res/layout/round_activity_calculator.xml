<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity"
    tools:deviceIds="wear_round"
    android:background="#000000">

    <Button
        android:id="@+id/key_equal"
        android:layout_width="@dimen/equal_button"
        android:layout_height="@dimen/equal_button"
        android:layout_centerInParent="true"
        android:textColor="@color/equal_key"
        android:text="=" />

    <ucsoftworks.com.rondocalc.widget.CircleLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="40dp"
        circle:angleOffset="53">

        <TextView
            android:id="@+id/display_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/display_text"
            android:background="@color/white"
            android:singleLine="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:text="0" />

        <TextView
            android:id="@+id/key_plus"
            android:layout_width="@dimen/operator_size"
            android:layout_height="@dimen/operator_size"
            android:background="@drawable/operator_key_selector"
            android:textColor="@color/operator_key"
            android:clickable="true"
            android:gravity="center"
            android:text="+" />

        <TextView
            android:id="@+id/key_minus"
            android:layout_width="@dimen/operator_size"
            android:layout_height="@dimen/operator_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/operator_key"
            android:background="@drawable/operator_key_selector"
            android:clickable="true"
            android:text="-" />

        <TextView
            android:id="@+id/key_mul"
            android:layout_width="@dimen/operator_size"
            android:layout_height="@dimen/operator_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/operator_key"
            android:background="@drawable/operator_key_selector"
            android:clickable="true"
            android:text="*" />

        <TextView
            android:id="@+id/key_divide"
            android:layout_width="@dimen/operator_size"
            android:layout_height="@dimen/operator_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/operator_key"
            android:background="@drawable/operator_key_selector"
            android:clickable="true"
            android:text="/" />
    </ucsoftworks.com.rondocalc.widget.CircleLayout>

    <ucsoftworks.com.rondocalc.widget.CircleLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        circle:angleOffset="-105.1">

        <TextView
            android:id="@+id/key0"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/key1"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="1" />

        <TextView
            android:id="@+id/key2"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="2" />

        <TextView
            android:id="@+id/key3"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="3" />

        <TextView
            android:id="@+id/key4"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="4" />

        <TextView
            android:id="@+id/key5"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="5" />

        <TextView
            android:id="@+id/key6"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="6" />

        <TextView
            android:id="@+id/key7"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="7" />

        <TextView
            android:id="@+id/key8"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="8" />

        <TextView
            android:id="@+id/key9"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="9" />

        <TextView
            android:id="@+id/keyDot"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="." />

        <TextView
            android:id="@+id/keyC"
            android:layout_width="@dimen/num_key_size"
            android:layout_height="@dimen/num_key_size"
            android:gravity="center"
            android:background="@drawable/num_key_selector"
            android:textColor="@color/num_key"
            android:clickable="true"
            android:text="C" />
    </ucsoftworks.com.rondocalc.widget.CircleLayout>
</RelativeLayout>
